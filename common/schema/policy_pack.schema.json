{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Policy Pack",
  "type": "object",
  "required": ["name", "version", "description", "controls"],
  "properties": {
    "name": {"type": "string"},
    "version": {"type": "string"},
    "description": {"type": "string"},
    "controls": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "authority",
          "clause",
          "evidence",
          "tags",
          "when"
        ],
        "properties": {
          "id": {"type": "string"},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "authority": {"type": "string"},
          "clause": {"type": "string"},
          "evidence": {"type": "string"},
          "tags": {
            "type": "array",
            "items": {"type": "string"}
          },
          "mappings": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {"type": "string"}
            }
          },
          "when": {
            "type": "object",
            "properties": {
              "tier": {
                "type": "array",
                "items": {"type": "string"}
              },
              "contains_pii": {"type": "boolean"},
              "customer_facing": {"type": "boolean"},
              "high_stakes": {"type": "boolean"},
              "autonomy_at_least": {"type": "integer", "minimum": 0},
              "sector": {
                "type": "array",
                "items": {"type": "string"}
              },
              "modifiers": {
                "type": "array",
                "items": {"type": "string"}
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
